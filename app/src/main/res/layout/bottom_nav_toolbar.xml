<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:orientation="horizontal">


    <LinearLayout
        android:background="#8955E6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100">

        <LinearLayout
            android:id="@+id/id_home_fragment"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/id_homeImageViewIcon"
                android:background="#FFFFFF"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_home"
                android:clickable="true" />
            <TextView
                android:background="#FFFFFF"
                android:gravity="center"
                android:id="@+id/feed_text_butId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginTop="3dp"/>

        </LinearLayout>

        <!-- Discassion Area -->
        <LinearLayout
            android:id="@+id/id_achievement"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/id_achievementImageViewIcon"
                android:background="#FFFFFF"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_home"
                android:clickable="true" />

            <TextView
                android:id="@+id/search_text_butId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="Achievement"
                android:textColor="#000000"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Home Area -->
        <LinearLayout
            android:id="@+id/id_reports"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/id_reportsImageViewIcon"
                android:background="#FFFFFF"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_home"
                android:clickable="true" />
            <TextView
                android:background="#FFFFFF"
                android:gravity="center"
                android:id="@+id/discassion_text_butId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Repors"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginTop="3dp"/>

        </LinearLayout>

        <!-- // Chat Areaa -->
        <LinearLayout
            android:id="@+id/id_knowledge"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/id_knowledgeImageViewIcon"
                android:background="#FFFFFF"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_home"
                android:clickable="true" />
            <TextView
                android:background="#FFFFFF"
                android:gravity="center"
                android:id="@+id/chat_text_butId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Knowledge"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginTop="3dp"/>

        </LinearLayout>




    </LinearLayout>




</LinearLayout>